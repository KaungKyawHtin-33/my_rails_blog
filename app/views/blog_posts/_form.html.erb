<%= form_with model: blog_post do |form| %>
    <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
            <div class="alert alert-danger"><%= message %></div>
        <% end %>
    <% end %>

    <div class="mb-4">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control w-50" %>
    </div>

    <div class="mb-4">
        <%= form.label :content, class: "form-label" %>
        <%= form.rich_text_area :content, class: "form-control" %>
    </div>

    <% if user_signed_in? %>
        <div class="mb-4">
            <%= form.label :published_at, class: "form-label" %>
            <div class="d-flex">
                <%= form.date_select :published_at, { include_blank: true }, { class: "form-control me-2" } %>
            </div>
        </div>
    <% end %>

    <div class="mb-4">
        <%= form.submit class: "btn btn-primary px-4" %>
    </div>
<% end %>