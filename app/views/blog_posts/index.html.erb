<h1 class="mb-4">All Blog Lists</h1>

<% @blog_posts.each do |blog| %>
    <div class="card w-75 mb-4">
        <div class="card-header">
            <h3><%= blog.title %></h3>
        </div>
        <div class="card-body">
            <p><%= blog.body.truncate(150, omission: "...") %></p>
        </div>
        <div class="p-2">
            <%= link_to "See more", blog, class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>